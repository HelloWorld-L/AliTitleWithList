<?xml version="1.0" encoding="utf-8"?>
<!--首页广告类型1 -> 横排4个图片带名字-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
		android:background="@color/white"
        android:gravity="center_vertical"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/llBtn1"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/image1"
				android:layout_width="32dp"
				android:background="@color/mainColor"
				android:layout_height="32dp"/>
			<TextView
				android:id="@+id/tvTip1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:text="tip1"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F3"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llBtn2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/image2"
				android:background="@color/mainColor"
				android:layout_width="32dp"
				android:layout_height="32dp"/>
			<TextView
				android:id="@+id/tvTip2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:text="tip2"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F3"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llBtn3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/image3"
				android:background="@color/mainColor"
				android:layout_width="32dp"
				android:layout_height="32dp"/>
			<TextView
				android:id="@+id/tvTip3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:text="tip3"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F3"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llBtn4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/image4"
				android:background="@color/mainColor"
				android:layout_width="32dp"
				android:layout_height="32dp"/>
			<TextView
				android:id="@+id/tvTip4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:text="tip4"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F3"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>