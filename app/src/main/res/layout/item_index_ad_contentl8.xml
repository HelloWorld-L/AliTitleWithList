<?xml version="1.0" encoding="utf-8"?>
<!--首页广告类型1 -> 中图+长文-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:background="@color/white"
		android:orientation="vertical">
		<include layout="@layout/layout_content_title"/>
		<RelativeLayout
			android:id="@+id/rlBtn1"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="69dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="10dp"
			android:layout_weight="1"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image1"
				android:layout_gravity="center_vertical"
				android:layout_width="110dp"
				android:layout_height="68dp"/>
			<TextView
				android:id="@+id/tvTip1"
				android:layout_toRightOf="@id/image1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F2"/>
			<TextView
				android:id="@+id/tvDes1"
				android:layout_below="@id/tvTip1"
				android:layout_marginTop="8dp"
				android:layout_toRightOf="@id/image1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="2"
				android:ellipsize="end"
				android:layout_marginLeft="15dp"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F4"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rlBtn2"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="69dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_weight="1"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image2"
				android:layout_gravity="center_vertical"
				android:layout_width="110dp"
				android:layout_height="68dp"/>
			<TextView
				android:id="@+id/tvTip2"
				android:layout_toRightOf="@id/image2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F2"/>
			<TextView
				android:id="@+id/tvDes2"
				android:layout_toRightOf="@id/image2"
				android:layout_below="@id/tvTip2"
				android:layout_marginTop="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="2"
				android:ellipsize="end"
				android:layout_marginLeft="15dp"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F4"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rlBtn3"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="69dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_weight="1"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image3"
				android:layout_gravity="center_vertical"
				android:layout_width="110dp"
				android:layout_height="68dp"/>
			<TextView
				android:id="@+id/tvTip3"
				android:layout_toRightOf="@id/image3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F2"/>
			<TextView
				android:id="@+id/tvDes3"
				android:layout_toRightOf="@id/image3"
				android:layout_below="@id/tvTip3"
				android:layout_marginTop="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="2"
				android:ellipsize="end"
				android:layout_marginLeft="15dp"
				android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F4"/>
		</RelativeLayout>
		<include layout="@layout/layout_content_more"/>
	</LinearLayout>
</LinearLayout>