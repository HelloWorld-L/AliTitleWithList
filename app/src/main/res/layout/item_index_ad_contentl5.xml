<?xml version="1.0" encoding="utf-8"?>
<!--首页广告类型1 -> 标题+小图+短文-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="132dp"
		android:layout_marginTop="10dp"
		android:background="@color/white"
		android:orientation="vertical">
		<include layout="@layout/layout_content_title"/>
		<include layout="@layout/layout_line"/>
		<LinearLayout
			android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
			android:orientation="horizontal">
			<RelativeLayout
				android:id="@+id/rlBtn1"
				android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/image1"
					android:layout_gravity="center_vertical"
					android:background="@color/mainColor"
					android:layout_width="68dp"
					android:layout_height="45dp"/>
				<TextView
					android:id="@+id/tvTip1"
					android:layout_toRightOf="@id/image1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:text="tip1"
					android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F2"/>
				<TextView
					android:id="@+id/tvDes1"
					android:layout_toRightOf="@id/image1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:maxLines="1"
					android:text="Des"
					android:layout_marginLeft="15dp"
					android:layout_alignParentBottom="true"
					android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F4"/>
			</RelativeLayout>
			<LinearLayout
				android:layout_width="1dp"
                android:layout_height="21dp"
				android:layout_gravity="center_vertical">
			</LinearLayout>
			<RelativeLayout
				android:id="@+id/rlBtn2"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp"
				android:layout_weight="1"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/image2"
					android:layout_gravity="center_vertical"
					android:background="@color/mainColor"
					android:layout_width="68dp"
					android:layout_height="45dp"/>
				<TextView
					android:id="@+id/tvTip2"
					android:layout_toRightOf="@id/image2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:text="tip2"
					android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F2"/>
				<TextView
					android:id="@+id/tvDes2"
					android:layout_toRightOf="@id/image2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:maxLines="1"
					android:text="des2"
					android:layout_marginLeft="15dp"
					android:layout_alignParentBottom="true"
					android:textAppearance="@style/TextAppear.Theme.Font_Level1_Size_F4"/>
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>